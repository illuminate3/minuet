<div class="row">

    <div class="col text-start page-title">
        {{ title|trans }}
    </div>

    {% if new_url is defined %}
        <div class="col text-end">
            <a class="btn btn-success" href="{{ path(new_url) }}">
                <i class="fa-solid fa-plus"></i>
                {{ 'action.new'|trans }}
            </a>
        </div>
    {% endif %}

    {% if edit_url is defined %}
        <div class="col text-end">
            <a class="btn btn-success" href="{{ path(edit_url) }}">
                <i class="fa-solid fa-plus"></i>
                {{ 'action.edit'|trans }}
            </a>
        </div>
    {% endif %}

    {% if cancel_url is defined %}
        <div class="col text-end">
            <a class="btn btn-danger" href="{{ path(cancel_url) }}">
                <i class="fa-solid fa-backward"></i>
                {{ 'action.cancel'|trans }}
            </a>
        </div>
    {% endif %}

</div>
<hr>
