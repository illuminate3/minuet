<!-- Title -->
<div class="row" style="padding:10px;">

    <div class="col-9 text-start page-title">
        {{ title|trans }}
    </div>

{% if action_cancel_main_url is defined %}
        <div class="col-2 text-end">
            <a class="btn btn-success" href="{{ path(action_cancel_main_url) }}">
                <i class="fa fa-arrow-left"></i>
                {{ 'action.list.cancel'|trans }}
            </a>
        </div>
    {% endif %}
    {% if action_edit_url is defined %}
        <div class="col-9 text-end">
            <a class="btn btn-success" href="{{ path(action_edit_url) }}">
                <i class="fa-solid fa-plus"></i>
                {{ 'action.edit'|trans }}
            </a>
        </div>
    {% endif %}

    {% if new_url is defined %}
        <div class="col text-end">
            <a class="btn btn-success" href="{{ path('app_message_new',{'id': thread.id}) }}">
                <i class="fa-solid fa-plus"></i>
                {{ 'action.new'|trans }}
            </a>
        </div>
    {% endif %}

    {% if action_cancel_url is defined %}
        <div class="col-{% if action_delete_url is defined %}2{%else%}3{%endif%} text-end">
            <a class="btn btn-success" href="{{ path(action_cancel_url,{id: thread.id}) }}">
                <i class="fa fa-arrow-left"></i>
                {{ 'action.list.cancel'|trans }}
            </a>
        </div>
    {% endif %}

    

    {% if action_delete_url is defined %}
        <div class="col-1 text-end">
            {{ include('message/_delete_form.html.twig') }}
        </div>
    {% endif %}
</div>
<hr>
