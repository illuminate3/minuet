<!-- User -->
<li class="nav-item dropdown no-arrow">
    <a class="nav-link dropdown-toggle"
       href="#" id="userDropdown"
       role="button"
       data-toggle="dropdown"
       data-bs-toggle="dropdown"
       aria-haspopup="true"
       aria-expanded="false">
        {% if app.user %}
            {{ app.user.profile.fullName }}
        {% else %}
            {{ 'menu.user'|trans }}
        {% endif %}
    </a>
    <div class="dropdown-menu" aria-labelledby="userDropdown">
        <a class="dropdown-item" href="{{ path('admin_user_edit', {id: app.user.id}) }}">
            {{ 'menu.profile'|trans }}
        </a>
        <a class="dropdown-item" href="{{ path('user_password_change') }}">
            {{ 'menu.password_change'|trans }}
        </a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="{{ path('security_logout') }}">
            {{ 'menu.logout'|trans }}
        </a>
    </div>
</li>
