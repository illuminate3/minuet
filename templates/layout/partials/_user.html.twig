<!-- User -->
<li class="align-items-center d-flex dropdown menu-item-has-children mx-0 nav-item no-arrow pe-3">
    <a class="px-0 pb-1 pt-1"
       href="#" id="userDropdown"
        >
        {% if app.user and app.user.profile.fullName %}
            {{ app.user.profile.fullName }}
        {% else %}
            {{ 'menu.user'|trans }}
        {% endif %}
    </a>
    <ul class="sub-menu"  aria-labelledby="userDropdown">
        <li class="ms-0">
            <a class="dropdown-item" href="{{ path('app_dash') }}">
                {{ 'menu.dash'|trans }}
            </a>
        </li>
      <li class="ms-0">
            <a class="dropdown-item" href="{{ path('app_thread_index') }}">
                {{ 'menu.messages'|trans }}
            </a>
        </li>
        <li class="ms-0">
            <a class="dropdown-item" href="{{ path('user_profile') }}">
                {{ 'menu.profile'|trans }}
            </a>
        </li>
         <li class="ms-0">
            <a class="dropdown-item" href="{{ path('user_password_change') }}">
                {{ 'menu.password_change'|trans }}
            </a>
        </li>
         
        <li class="ms-0">
            <a class="dropdown-item" href="{{ path('security_logout') }}">
                {{ 'menu.logout'|trans }}
            </a>
        </li>
    </ul>
</li>


 
                       
