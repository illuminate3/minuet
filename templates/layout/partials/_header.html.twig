<!-- Header -->
<header class="mx-0 px-0 w-100 ">

    <div class="header-menu d-none d-lg-block static-top pt-1">
        <div class="container-fluid px-md-5">
            <div class="align-items-center d-flex header-menu-inner justify-content-between">
                <div>
                    <a class="navbar-brand fw-bolder text-dark" href="{{ path('app_index') }}">
                        {{ site.site_name }}
                    </a>
                </div>
                <nav class="site-navigation">
                    <ul class="main-menu">
                        <li>
                            <a class="active" href="/">Home </a>
                        </li>
                        {{ include('layout/partials/_products.html.twig') }}

                        {{ include('layout/partials/_pages.html.twig') }}

                        {{ include('layout/partials/_menu.html.twig') }}
                        <li><a href="#">Contact</a></li>
                    </ul>
                </nav>
                <div class="header-social-compare-login d-flex align-items-center">
                    <div class="header-social-menu">
                        <ul class="social">
                            <li><a href="#"><i class="ion-social-twitter"></i></a></li>
                            <li><a href="#"><i class="ion-social-facebook"></i></a></li>
                            <li><a href="#"><i class="ion-social-rss"></i></a></li>
                            <li><a href="#"><i class="ion-social-instagram-outline"></i></a></li>
                            <li><a href="#"><i class="ion-social-youtube-outline"></i></a></li>
                        </ul>
                    </div>
                    <div class="header-compare-login">
                        <nav class="site-navigation mobile">
                            <ul class="main-menu compare-login ">
                                <li>
                                    <a href="#" class="align-items-center d-flex pb-0 pt-0">
                                        <i class="ion-ios-loop-strong"></i> 
                                        <span>Compare</span> 
                                        <span class="compare-badge">3</span>
                                    </a>
                                </li>
                                {% if app.user %}
                                    {{ include('layout/partials/_user.html.twig') }}
                                {% else %}
                                    {{ include('layout/partials/_signup.html.twig') }}
                                {% endif %}
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--====== Header Desktop Menu Ends ======-->

    <!--====== Header Mobile menu Start ======-->

    <div class="header-mobile-menu d-lg-none">
        <div class="container-fluid px-sm-4 px-0">
            <div class="header-mobile-wrapper d-flex justify-content-between align-items-center">
                <div class="header-mobile-logo">
                    <a href="/" class="ps-3">
                        {# <img class="custom-logo" src="assets/images/logo.png" alt=""> #}
                         <a class="navbar-brand fw-bolder text-dark" href="{{ path('app_index') }}">
                        {{ site.site_name }}
                    </a>
                </div>  
                <div class="header-mobile-meta ">
                    <div class="header-menu-inner">
                        <nav class="site-navigation mobile">
                            <ul class="main-menu  meta d-flex">
                                <li><a class="toggle-bar navbar-mobile-open" href="javascript:;"><i class="d-flex ion-navicon header-icon-toggle justify-content-center ps-2 pt-1"></i></a></li>
                                <li>
                                    <a href="#" class="p-1">
                                        <i class="ion-ios-loop-strong"></i>
                                        <span class="compare-badge">3</span>
                                    </a>
                                </li>
                                    {% if app.user %}
                                        {{ include('layout/partials/_user.html.twig') }}
                                    {% else %}
                                        {{ include('layout/partials/_signup.html.twig') }}
                                    {% endif %}
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="mobile-navigation">
            <a href="javascript:;" class="close-navbar-mobile"><i class="fal fa-times"></i></a>
            <nav class="site-navigation ">
                <ul class="main-menu">
                    <li>
                        <a class="active" href="/">Home </a>
                    </li>
                        {{ include('layout/partials/_products.html.twig') }}

                        {{ include('layout/partials/_pages.html.twig') }}

                        {{ include('layout/partials/_menu.html.twig') }}
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
        </div>
    </div>

    <!--====== Header Mobile menu Ends ======-->

</header>
