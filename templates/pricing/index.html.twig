{% extends 'layout/base.html.twig' %}

{% block subheader %}
    <!-- Title -->
    {{ include('layout/partials/_title.html.twig') }}
{% endblock %}

{% block body %}

<div class="row mt-4 mb-4">
    <div class="col">

        <section>
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">

            {% for item in subscriptions %}
            <div class="col">

                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">
                            {{ item.plan }}
                        </h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">
                            $
                            {{ item.price }}
                            <small class="text-muted fw-light">/mo</small>
                        </h1>
                        <ul class="list-unstyled mt-3 mb-4">

                            <li>
                                {{ item.validUntil }}
                            </li>
                            <li>
                                {{ item.availability }}
                            </li>
                            <li>
                                {{ item.support }}
                            </li>

                        </ul>
                        {% if app.user %}
                            <a href="{{ path('checkout',{'priceId':item.stripePriceId}) }}" class="w-100 btn btn-lg btn-outline-primary">
                                {{ 'action.change_plane'|trans }}
                            </a>
                        {% else %}
                            <a href="{{ path('auth_register') }}" class="w-100 btn btn-lg btn-outline-primary">
                                {{ 'action.register'|trans }}
                            </a>
                        {% endif %}

                    </div>
                </div>

                </div>
                {% endfor %}

        </div>
        </section>

    </div>
</div>

{% endblock %}
