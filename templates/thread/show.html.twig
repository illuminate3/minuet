<!DOCTYPE html>

<title>Thread</title>

{% block body %}
    <h1>Thread</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IsClosed</th>
                <td>{{ thread.isClosed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsPin</th>
                <td>{{ thread.isPin ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>TotalMessages</th>
                <td>{{ thread.totalMessages }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ thread.id }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ thread.createdAt ? thread.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_thread_index') }}">back to list</a>

    <a href="{{ path('app_thread_edit', {'id': thread.id}) }}">edit</a>

    {{ include('thread/_delete_form.html.twig') }}
{% endblock %}
