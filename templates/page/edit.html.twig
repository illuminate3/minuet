{% extends 'layout/base.html.twig' %}

{% block title %}{{ title|trans }}{% endblock %}

{% block body %}

    <!-- Navbar -->
    {{ include('_partials/_action_title.html.twig') }}

    <div class="row">
        <div class="col">

            {{ form_start(form) }}

            <div class="form-floating my-3">
                {{ form_row(form.title) }}
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        {{ form_row(form.slug) }}
                    </div>
                </div>
                <div class="col">
                    <div class="form-check mt-1">
                        {{ form_widget(form.publish) }}
                        {{ form_label(form.publish) }}
                    </div>
                    <div class="form-check mt-2">
                        {{ form_widget(form.show_in_menu) }}
                        {{ form_label(form.show_in_menu) }}
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <div class="form-floating">
                {{ form_row(form.description) }}
            </div>

            <div class="form-group my-4">
                {{ form_row(form.content) }}
            </div>


            <!-- Action -->
            {{ include('_partials/_action_form.html.twig') }}


            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
