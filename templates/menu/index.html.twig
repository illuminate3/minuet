{% extends 'layout/base.html.twig' %}

{% block subheader %}
    <!-- Title -->
    {{ include('_partials/_action_title.html.twig') }}
{% endblock %}

{% block javascripts %}
    <!-- Menu JS -->
    {{ encore_entry_script_tags('js/menu-sorting') }}
{% endblock %}

{% block body %}

    <div class="row mt-4 mb-4">
        <div class="col">

            <div class="table-responsive">
                <table class="table" style="background-color: #FFFFFF">
                    <thead class="thead">
                    <tr>
                        <th>{{ 'table.link_text'|trans }}</th>
                        <th>{{ 'table.url'|trans }}</th>
                        <th>{{ 'table.move'|trans }}</th>
                        <th>{{ 'table.action'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for item in menus %}
                        <tr>
                            <td>
                                {{ item.title }}
                            </td>
                            <td>
                                {{ item.url }}
                            </td>
                            <td>
                                {% if loop.first %}
                                    <button class="btn btn-sm btn-light js-move js-down-one"
                                            id="{{ item.id }}"
                                            type="button">
                                        <i class="fas fa-arrow-down"></i> {{ 'text.down'|trans }}
                                    </button>
                                {% else %}
                                    <button class="btn btn-sm btn-light js-move js-up-one"
                                            id="{{ item.id }}"
                                            type="button">
                                        <i class="fas fa-arrow-up"></i> {{ 'text.up'|trans }}
                                    </button>
                                {% endif %}
                            </td>
                            <td>
                                {{ include(
                                    '_partials/_action_group_form.html.twig',
                                    {
                                        id: item.id,
                                        delete_url: action_delete_url,
                                        edit_url: action_edit_url
                                    },
                                    with_context = false
                                ) }}
                            </td>
                        </tr>

                    {% else %}
                        <div class="well">{{ 'message.not_found'|trans }}</div>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}
