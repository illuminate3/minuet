<form class="delete_form" method="post" action="{{ path('app_message_delete', {'id': messages[0].id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ messages[0].id) }}">
    <input type="hidden" name="message_id" value="{{messages[0].id}}">
    <input type="hidden" name="thread_id" value="{{messages[0].thread.id}}">
    <button class="btn btn-danger show_confirm_delete">Delete</button>
</form>
