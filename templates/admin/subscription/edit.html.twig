{% extends 'admin/layout/base.html.twig' %}

{% block title %}{{ title|trans }}{% endblock %}

{% block body %}

    <!-- Navbar -->
    {{ include('admin/_partials/_action_title.html.twig') }}

    <div class="row">
        <div class="col">

            {{ form_start(form) }}

            <div class="form-floating my-3">
                {{ form_row(form.plan) }}
            </div>

            <div class="form-floating">
                {{ form_row(form.price) }}
            </div>

            <div class="form-group my-4">
                {{ form_row(form.valid_until) }}
            </div>

            <div class="form-floating my-3">
                {{ form_row(form.availability) }}
            </div>

            <div class="form-floating">
                {{ form_row(form.support) }}
            </div>

            <div class="form-group my-4">
                {{ form_row(form.stripe_price_id) }}
            </div>


            <!-- Action -->
            {{ include('admin/_partials/_action_form.html.twig') }}


            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
