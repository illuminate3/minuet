{% extends 'admin/layout/base.html.twig' %}

{% block title %}{{ title|trans }}{% endblock %}

{% block body %}

    <!-- Navbar -->
    {{ include('admin/_partials/_action_title.html.twig') }}

    <div class="row">
        <div class="col">

            <div class="table-responsive">
                <table class="table" style="background-color: #FFFFFF">
                    <thead class="thead">
                    <tr>
                        <th>{{ 'table.username'|trans }}</th>
                        <th>{{ 'table.email'|trans }}</th>
                        <th>{{ 'table.action'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for user in users %}
                        <tr>
                            <td>
                                {{ user.profile.fullName }}
                            </td>
                            <td>
                                {{ user.email }}
                            </td>
                            <td>
                                {{ include(
                                    'admin/_partials/_action_group_form.html.twig',
                                    {
                                        id: user.id,
                                        delete_url: action_delete_url,
                                        edit_url: action_edit_url,
                                        cancel_url: cancel_url
                                    },
                                    with_context = false
                                ) }}
                            </td>
                        </tr>

                    {% else %}
                        <div class="well">{{ 'message.not_found'|trans }}</div>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

            {{ knp_pagination_render(users) }}

        </div>
    </div>

{% endblock %}
