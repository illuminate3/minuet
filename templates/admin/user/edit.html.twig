{% extends 'admin/layout/base.html.twig' %}

{% block subheader %}
    <!-- Title -->
    {{ include('admin/_partials/_action_title.html.twig') }}
{% endblock %}

{% block body %}

    <div class="row py-4">
        <div class="col">

            {% form_theme form 'bootstrap_5_layout.html.twig' %}

            {{ form_start(form) }}

            <div class="my-3">
                {{ form_widget(form.roles) }}
                {{ form_label(form.roles) }}
            </div>

            <div class="form-floating my-3">
                {{ form_row(form.profile.full_name) }}
            </div>

            <div class="form-floating my-3">
                {{ form_row(form.profile.phone) }}
            </div>

            <div class="form-floating my-3">
                {{ form_row(form.email) }}
            </div>

            <div>
                {{ form_widget(form.email_verified) }}
                {{ form_label(form.email_verified) }}
            </div>

            <div class="form-floating my-3">
                {{ form_row(form.password) }}
            </div>

            <!-- Action -->
            {{ include('admin/_partials/_action_form.html.twig') }}

            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
