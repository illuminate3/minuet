{% extends 'admin/layout/base.html.twig' %}

{% block title %}{{ 'title.add_user'|trans }}{% endblock %}

{% block body %}

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_user') }}">
                <i class="fas fa-users-cog text-danger"></i> {{ 'users'|trans }}
            </a>
        </li>
        <li class="nav-item active">
            <span class="nav-link active">
                <i class="fas fa-plus-square text-danger"></i> {{ 'label.new'|trans }}
            </span>
        </li>
    </ul>

    <div class="card mb-3">

        <div class="card-body">

            {% form_theme form 'bootstrap_4_layout.html.twig' %}

            {{ form_start(form) }}
                {{ form_row(form.roles) }}
                {{ form_row(form.profile.full_name) }}
{#                {{ form_row(form.username) }}#}
                {{ form_row(form.profile.phone) }}
                {{ form_row(form.email) }}
                {{ form_row(form.email_verified) }}
                {{ form_row(form.password) }}

            <div class="form-group">

                <button type="submit" class="btn btn-primary">
                    {{ 'action.save'|trans }}
                </button>

                <a class="btn btn-danger" href="{{ path('admin_menu') }}">
                    {{ 'action.cancel'|trans }}
                </a>

            </div>

            {{ form_end(form) }}

        </div>
    </div><br>

{% endblock %}
