{% extends 'admin/layout/base.html.twig' %}

{% block subheader %}
    <!-- Title -->
    {{ include('admin/_partials/_action_title.html.twig') }}
{% endblock %}

{% block body %}

    <div class="row mt-4 mb-4">
        <div class="col">

            {{ form_start(form) }}

            <div class="form-floating my-3">
                {{ form_row(form.title) }}
            </div>

            <hr>

            <div class="row mt-3">
                <div class="col">

                    <div class="form-group">
                        {{ form_widget(form.isSlug) }}
                        {{ form_label(form.isSlug) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.url) }}
                    </div>

                </div>
            </div>

            <hr>

            <div class="row mt-3">
                <div class="col">

                    <div class="form-group">
                        {{ form_widget(form.new_tab) }}
                        {{ form_label(form.new_tab) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.nofollow) }}
                        {{ form_label(form.nofollow) }}
                    </div>

                </div>
            </div>

            <!-- Action -->
            {{ include('admin/_partials/_action_form.html.twig') }}

            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}

