{% extends 'admin/layout/base.html.twig' %}

{% block subheader %}
    <!-- Title -->
    {{ include('admin/_partials/_action_title.html.twig') }}
{% endblock %}

{% block javascripts %}
    <!-- Menu JS -->
    {{ encore_entry_script_tags('js/menu-sorting') }}
{% endblock %}

{% block body %}

    <div class="row mt-4 mb-4">
        <div class="col">

            <div class="table-responsive">
                <table class="table" style="background-color: #FFFFFF">
                    <thead class="thead">
                    <tr>
                        <th>{{ 'table.title'|trans }}</th>
                        <th>{{ 'table.price'|trans }}</th>
                        <th>{{ 'table.category'|trans }}</th>
                        <th>{{ 'table.action'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for item in products %}
                        <tr>
                            <td>
                                {{ item.title }}
                            </td>
                            <td>
                                ${{ item.price / 100 }}
                            </td>
                            <td>
                                {{ item.category.name }}
                            </td>
                            <td>
                                {{ include(
                                    'admin/_partials/_action_group_form.html.twig',
                                    {
                                        id: item.id,
                                        delete_url: action_delete_url,
                                        edit_url: action_edit_url
                                    },
                                    with_context = false
                                ) }}
                            </td>
                        </tr>

                    {% else %}
                        <div class="well">{{ 'message.not_found'|trans }}</div>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}
