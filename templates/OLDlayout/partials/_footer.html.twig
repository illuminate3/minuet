<!-- Footer -->
<footer class="footer bg-dark">
<div class="container">

    <div class="row gy-4 gx-5">

        <div class="col-lg-6 col-md-6">

            <h5 class="h1 text-white">
                {{ site.site_name }}
            </h5>

            <p class="small text-muted">
                {{ site.site_branding }}
            </p>

            <p class="small text-muted mb-0">
                Â© {{ 'text.copyrights'|trans }} {{ "now" | date("Y") }}.
                {{ 'text.all_rights_reserved'|trans }}
                <a class="text-muted" href="{{ path('app_index') }}">
                    {{ site.site_name }}
                </a>
            </p>

        </div>

        <div class="col-lg-2 col-md-6">

            <h5 class="text-white mb-3">
                {{ 'menu.pages'|trans }}
            </h5>

            <ul class="list-unstyled text-muted">
                {% for item in site.footer_pages %}
                    <li>
                        <a class="nav-link" href="page/{{ item.slug }}"
                        >
                            {{ item.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>

        </div>

        <div class="col-lg-2 col-md-6">

            <h5 class="text-white mb-3">
                {{ 'text.quick_links'|trans }}
            </h5>

            <ul class="list-unstyled text-muted">
                {% for item in site.menu %}
                    <li>
                        <a class="nav-link" href="{{ item.url }}"
                            {% if item.nofollow == true %} rel="nofollow" {% endif %}
                            {% if item.newTab == true %} target="_blank" {% endif %}
                        >
                            {{ item.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>

        </div>

        <div class="col-lg-2 col-md-6">

            <h5 class="text-white mb-3">
                {{ 'text.navigation'|trans }}
            </h5>

            <ul class="list-unstyled text-muted">
                {% if app.user %}
                    <li>
                        <a class="nav-link" href="{{ path('app_dash') }}">
                            {{ 'menu.dash'|trans }}
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('app_thread_index') }}">
                            {{ 'menu.messages'|trans }}
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('app_pricing') }}">
                            {{ 'menu.pricing'|trans }}
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('user_profile') }}">
                            {{ 'menu.profile'|trans }}
                        </a>
                    </li>
                {% else %}
                    <li>
                        <a class="nav-link" href="{{ path('app_pricing') }}">
                            {{ 'menu.pricing'|trans }}
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('auth_register') }}">
                            {{ 'menu.register'|trans }}
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="{{ path('security_login') }}">
                            {{ 'menu.login'|trans }}
                        </a>
                    </li>
                {% endif %}
            </ul>

        </div>

    </div>

</div>
</footer>
