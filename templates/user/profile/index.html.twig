            </div>

            <div class="col-md-6">
                <div class="text-muted">
                    {{ 'label.twitter'|trans }}
                </div>
                <div>
                    {{ profile.twitter }}
                </div>
            </div>

            <div class="col-md-6">
                <div class="text-muted">
                    {{ 'label.linkedin'|trans }}
                </div>
                <div>
                    {{ profile.linkedin }}
