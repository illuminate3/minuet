            </div>

        </div>

        <hr class="my-4">

        <h4 class="mb-3">
        </h4>

        <div class="row g-3">

            <div class="col-12">
                <div class="text-muted">
                    {{ 'label.banner'|trans }}
                </div>
                <div>
                    {{ profile.banner }}
                </div>
            </div>

        </div>


    </div>
</div>

