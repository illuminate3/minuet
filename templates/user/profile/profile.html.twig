{% extends 'layout/dash/dash.html.twig' %}

{% block body %}

    <div class="row mt-4 mb-4">

        <div class="card full-xs">
            <div class="card-body">

                <h3 class="card-title">{{ title|trans }}</h3>

                <p class="card-text">

                    {% form_theme form 'bootstrap_5_layout.html.twig' %}

                    {{ form_start(form) }}

                    {{ form_row(form.full_name) }}
                    {{ form_row(form.phone) }}

                </p>

                <div class="form-group row mb-0 mt-3 mb-auto">
                    <div class="col-md-12">

                        <button type="submit" class="btn btn-success btn-lg">
                            {{ 'action.save'|trans }}
                        </button>

                    </div>
                </div>

                {{ form_end(form) }}

            </div>
        </div>


    </div>

{% endblock %}
