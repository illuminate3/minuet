{% extends 'layout/base.html.twig' %}

{% block title %}{{ title|trans }}{% endblock %}

{% block body %}

    <!-- Navbar -->
    {{ include('_partials/_action_title.html.twig') }}

    <div class="row">
        <div class="col">

            {{ form_start(form) }}

            <div class="my-3">
                {{ form_widget(form.roles) }}
                {{ form_label(form.roles) }}
            </div>

            <div class="form-floating my-3">
                {{ form_row(form.profile.first_name) }}
            </div>
            <div class="form-floating my-3">
                {{ form_row(form.profile.last_name) }}
            </div>

            <div class="form-floating my-3">
                {{ form_row(form.profile.phone) }}
            </div>

            <div class="form-floating my-3">
                {{ form_row(form.email) }}
            </div>

            <div>
                {{ form_widget(form.email_verified) }}
                {{ form_label(form.email_verified) }}
            </div>

            <div class="form-floating my-3">
                {{ form_row(form.password) }}
            </div>


            <!-- Action -->
            {{ include('_partials/_action_form.html.twig') }}


            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
